<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/recnews_image"
                android:layout_width="120dp"
                android:layout_height="76dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/config_image"
                />

        <LinearLayout
            android:id="@+id/haha2"
            android:layout_marginLeft="32px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:id="@+id/recnews_title"
                android:maxLines="2"
                android:textColor="@android:color/holo_red_dark"
                android:text="111111111111111111"
                />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recnews_description"
                android:textSize="10dp"
                android:textColor="#777777"
                android:text="11111111111111"
                />

            <TextView
                android:layout_marginTop="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recnews_ctime"
                android:textSize="10dp"
                android:textColor="#777777"
                android:text="2016-05-17 07:13"
                />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>